<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:padding="10dp"
    android:id="@+id/relative"
    android:background="@drawable/gradient"
    tools:context="com.example.developer.calculator.MainActivity">


    <LinearLayout
        android:gravity="center"
        android:weightSum="30"
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/screen"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:gravity="bottom|right"
            android:textColor="@color/text"
            android:textSize="@dimen/result" />
    </LinearLayout>
    <View
        android:layout_margin="30dp"
        android:id="@+id/view1"
        android:layout_centerInParent="true"
        android:layout_above="@+id/linear2"
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:background="#30cfd0"></View>

    <LinearLayout
        android:gravity="center"
        android:paddingBottom="5dp"
        android:orientation="horizontal"
        android:id="@+id/linear2"
        android:layout_above="@+id/linear3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/seven"
            android:layout_width="@dimen/button"
            android:layout_height="@dimen/button"
            android:layout_margin="6dp"
            android:background="@drawable/circle"
            android:onClick="onClickNumber"
            android:padding="5dp"
            android:text="7"
            android:textColor="@color/text"
            android:textSize="@dimen/text" />

        <Button
            android:padding="5dp"
            android:layout_width="@dimen/button"
            android:layout_height="@dimen/button"
            android:layout_margin="6dp"
            android:id="@+id/eight"
            android:textColor="@color/text"
            android:background="@drawable/circle"
            android:textSize="@dimen/text"
            android:onClick="onClickNumber"
            android:text="8"/>
        <Button
            android:layout_width="@dimen/button"
            android:layout_height="@dimen/button"
            android:layout_margin="6dp"
            android:id="@+id/nine"
            android:padding="5dp"
            android:textColor="@color/text"
            android:background="@drawable/circle"
            android:textSize="@dimen/text"
            android:onClick="onClickNumber"
            android:text="9"/>
        <Button
            android:padding="5dp"
            android:layout_width="@dimen/button"
            android:layout_height="@dimen/button"
            android:layout_margin="6dp"
            android:id="@+id/div"
            android:textColor="@color/text"
            android:background="@drawable/circle"
            android:textSize="@dimen/text"
            android:onClick="onClickOperator"
            android:text="/"/>



    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:paddingBottom="5dp"
        android:orientation="horizontal"
        android:id="@+id/linear3"
        android:layout_above="@+id/linear4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:padding="5dp"
            android:layout_width="@dimen/button"
            android:layout_height="@dimen/button"
            android:layout_margin="6dp"
            android:id="@+id/four"
            android:textColor="@color/text"
            android:background="@drawable/circle"
            android:textSize="@dimen/text"
            android:onClick="onClickNumber"
            android:text="4"/>
        <Button
            android:padding="5dp"
            android:layout_width="@dimen/button"
            android:layout_height="@dimen/button"
            android:layout_margin="6dp"
            android:id="@+id/five"
            android:textColor="@color/text"
            android:background="@drawable/circle"
            android:textSize="@dimen/text"
            android:onClick="onClickNumber"
            android:text="5"/>
        <Button
            android:padding="5dp"
            android:layout_width="@dimen/button"
            android:layout_height="@dimen/button"
            android:layout_margin="6dp"
            android:id="@+id/six"
            android:textColor="@color/text"
            android:background="@drawable/circle"
            android:textSize="@dimen/text"
            android:onClick="onClickNumber"
            android:text="6"/>
        <Button
            android:padding="5dp"
            android:layout_width="@dimen/button"
            android:layout_height="@dimen/button"
            android:layout_margin="6dp"
            android:id="@+id/add"
            android:textColor="@color/text"
            android:background="@drawable/circle"
            android:textSize="@dimen/text"
            android:onClick="onClickOperator"
            android:text="+"/>

  `    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:paddingBottom="5dp"
        android:orientation="horizontal"
        android:id="@+id/linear4"
        android:layout_above="@+id/linear5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:padding="5dp"
            android:layout_width="@dimen/button"
            android:layout_height="@dimen/button"
            android:layout_margin="6dp"
            android:id="@+id/one"
            android:textColor="@color/text"
            android:background="@drawable/circle"
            android:textSize="@dimen/text"
            android:onClick="onClickNumber"
            android:text="1"/>
        <Button
            android:padding="5dp"
            android:layout_width="@dimen/button"
            android:layout_height="@dimen/button"
            android:layout_margin="6dp"
            android:id="@+id/two"
            android:textColor="@color/text"
            android:background="@drawable/circle"
            android:textSize="@dimen/text"
            android:onClick="onClickNumber"
            android:text="2"/>
        <Button
            android:padding="5dp"
            android:layout_width="@dimen/button"
            android:layout_height="@dimen/button"
            android:layout_margin="6dp"
            android:id="@+id/three"
            android:textColor="@color/text"
            android:background="@drawable/circle"
            android:textSize="@dimen/text"
            android:onClick="onClickNumber"
            android:text="3"/>
        <Button
            android:padding="5dp"
            android:layout_width="@dimen/button"
            android:layout_height="@dimen/button"
            android:layout_margin="6dp"
            android:id="@+id/sub"
            android:textColor="@color/text"
            android:background="@drawable/circle"
            android:textSize="@dimen/text"
            android:onClick="onClickOperator"
            android:text="-"/>


    </LinearLayout>

    <LinearLayout
        android:layout_above="@+id/linear6"

        android:gravity="center"
        android:paddingBottom="5dp"
        android:orientation="horizontal"
        android:id="@+id/linear5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:padding="5dp"
            android:layout_width="@dimen/button"
            android:layout_height="@dimen/button"
            android:layout_margin="6dp"
            android:id="@+id/dot"
            android:textColor="@color/text"
            android:background="@drawable/circle"
            android:textSize="@dimen/text"
            android:onClick="onClickNumber"
            android:text="."/>
        <Button
            android:padding="5dp"
            android:layout_width="@dimen/button"
            android:layout_height="@dimen/button"
            android:layout_margin="6dp"
            android:id="@+id/zero"
            android:textColor="@color/text"
            android:background="@drawable/circle"
            android:textSize="@dimen/text"
            android:onClick="onClickNumber"
            android:text="0"/>
        <Button
            android:padding="5dp"
            android:layout_width="@dimen/button"
            android:layout_height="@dimen/button"
            android:layout_margin="6dp"
            android:id="@+id/equal"
            android:textColor="@color/text"
            android:background="@drawable/circle"
            android:textSize="@dimen/text"
            android:onClick="onClickEqual"
            android:text="="/>
        <Button
            android:padding="5dp"
            android:layout_width="@dimen/button"
            android:layout_height="@dimen/button"
            android:layout_margin="6dp"
            android:id="@+id/mul"
            android:textColor="@color/text"
            android:background="@drawable/circle"
            android:textSize="@dimen/text"
            android:onClick="onClickOperator"
            android:text="*"/>

    </LinearLayout>

<LinearLayout
    android:gravity="center"
    android:id="@+id/linear6"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:padding="5dp"
        android:id="@+id/button"
        android:layout_width="@dimen/button"
        android:layout_height="@dimen/button"
        android:layout_margin="6dp"
        android:background="@drawable/circle"
        android:gravity="center"
        android:onClick="onClickClear"
        android:text="c"
        android:textColor="@color/text"
        android:textSize="@dimen/text" />
</LinearLayout>
</RelativeLayout>
